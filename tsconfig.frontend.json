{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "files": [
    "frontend/main.ts",
    "frontend/polyfills.ts"
  ],
  "include": [
    "frontend/**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
